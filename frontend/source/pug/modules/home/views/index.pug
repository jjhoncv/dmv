extends /_layout/layout.pug


block content
	-
		var menu = [{"label": "logo","attr": {"class":"active"}}]
		var menuRight = [{"label": "Ipsum"},{"label": "Consectetur"},{"label": "Aliqua"},{"label": "Laborum"}]
	body    
		header
			nav.navbar.navbar-default
				.container
					ul.nav.navbar-nav
						for item in menu
							li()&attributes(item.attr)
								a=item.label
					ul.nav.navbar-nav.navbar-right
						for item in menuRight
							li()&attributes(item.attr)
								a=item.label
		main
			.container.inner
				ol.breadcrumb
					li
						a(href="#") Home
					li
						a(href="#") Library
					li
						a.active(href="#") Data

				.jumbotron
